<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".presentation.view.UsersActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_9dp"
        android:layout_marginBottom="@dimen/dimen_1dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_2dp"
        app:cardElevation="@dimen/dimen_10dp"
        app:cardMaxElevation="@dimen/dimen_12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="@string/hint_name_user"
                android:textColor="@color/green_second"
                android:textSize="@dimen/dimen_22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cell_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginStart="@dimen/dimen_14dp"
                android:textColor="@color/black"
                android:drawablePadding="@dimen/dimen_8dp"
                android:text="@string/hint_phone_user"
                android:textSize="@dimen/dimen_20sp"
                app:drawableStartCompat="@drawable/ic_call" />

            <TextView
                android:id="@+id/mail_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_14dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:drawablePadding="@dimen/dimen_8dp"
                android:text="@string/hint_email_user"
                android:textSize="@dimen/dimen_20sp"
                app:drawableStartCompat="@drawable/ic_mail" />

            <TextView
                android:id="@+id/txt_see_publications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:text="@string/hint_look_post"
                android:textColor="@color/green_second"
                android:textSize="@dimen/dimen_16sp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/dimen_16dp"
                android:layout_marginEnd="@dimen/dimen_12dp"
                android:padding="@dimen/dimen_8dp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
